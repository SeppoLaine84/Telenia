.form-group
	label.col-lg-3.control-label(for='palkkaTyyppi') Palkkatyyppi
	.col-lg-9
		select#palkkaTyyppi.form-control(name='palkkaTyyppi' )
			option(value=0 disabled="disabled") Valitse palkkatyyppi
			if(luser.palkka.palkkaTyyppi == 1)
				option(value=1 selected) Tuntipalkka
				option(value=2) Kk-palkka
			else
				option(value=1) Tuntipalkka
				option(value=2 selected) Kk-palkka
#palkkaTyyppi-1.hidden.palkkaTyypiSelect
	.form-group
		label.col-lg-3.control-label(for='palkka.tuntipalkka') Tuntipalkka
		.col-lg-9
			.input-group
				.input-group-addon
					i.fa.fa-fw.fa-euro
				input.form-control.palkkaValue(type='tel' name='palkka.tuntipalkka'  placeholder="Tuntipalkka" value="#{luser.palkka.tuntipalkka}" )
			span.error.text-error
	.form-group
		label.col-lg-3.control-label(for='palkka.tuntipalkka') Provisio
			br
			small.hint huom. Provision määrä asetetaan kampanja kohtaisesti.
		.col-lg-9
			.checkbox
				if(luser.palkka.provisioEnabled == true)
					input.provisioEnabled(type="checkbox" name="provisioEnabled" checked)
				else
					input.provisioEnabled(type="checkbox" name="provisioEnabled" )
				label(for="provisioEnabled")
			
