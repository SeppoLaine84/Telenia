	script.
		
		 $('.editor').editable(updateCampaign(), {
			type:"text",
			indicator : 'Tallennetaan...',
			tooltip   : 'Muuta tietoa',
			submit:		'Hyväksy',
			type:'text', 
			cssclass : 'editor', 
			style   : '',
		 });
		 
